@model SmartController.Shared.DTOs.DashboardDto
@{ ViewData["Title"] = "Dashboard"; }

<div class="container-fluid">
    <h2 class="mb-4">Dashboard</h2>
    
    <div class="row">
        <div class="col-md-3">
            <div class="card bg-primary text-white mb-3">
                <div class="card-body">
                    <h5 class="card-title">Toplam Cihaz</h5>
                    <h2>@Model.TotalDevices</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white mb-3">
                <div class="card-body">
                    <h5 class="card-title">Online</h5>
                    <h2>@Model.OnlineDevices</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white mb-3">
                <div class="card-body">
                    <h5 class="card-title">Offline</h5>
                    <h2>@Model.OfflineDevices</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark mb-3">
                <div class="card-body">
                    <h5 class="card-title">Bugün İşlem</h5>
                    <h2>@Model.TodayOperations</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Son 24 Saat Alarmları</div>
                <div class="card-body">
                    <h3 class="text-danger">@Model.Last24HoursAlarms</h3>
                    <p class="text-muted">Bağlantı kopan cihaz sayısı</p>
                </div>
            </div>
        </div>
    </div>
</div>
