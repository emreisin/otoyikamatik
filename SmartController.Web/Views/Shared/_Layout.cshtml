<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartController</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .sidebar { min-height: 100vh; background: #343a40; }
        .sidebar a { color: #adb5bd; text-decoration: none; padding: 10px 15px; display: block; }
        .sidebar a:hover, .sidebar a.active { color: #fff; background: #495057; }
        .main-content { padding: 20px; }
        .user-info { border-top: 1px solid #495057; margin-top: auto; }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 sidebar d-flex flex-column">
                <div class="py-4 px-3">
                    <h5 class="text-white">SmartController</h5>
                </div>
                <a asp-controller="Home" asp-action="Index">Dashboard</a>
                <a asp-controller="Devices" asp-action="Index">Cihazlar</a>
                <a asp-controller="Commands" asp-action="Index">Komutlar</a>
                <a asp-controller="Reports" asp-action="Index">Raporlar</a>
                <a asp-controller="Schedules" asp-action="Index">Zamanlanmış Görevler</a>
                <div class="user-info mt-auto p-3">
                    <small class="text-muted d-block">@User.Identity?.Name</small>
                    <small class="text-muted d-block mb-2">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</small>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-outline-light btn-sm w-100">Çıkış</button>
                    </form>
                </div>
            </nav>
            <main class="col-md-10 main-content">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
