@model SmartController.Db.Entities.Report
@{ ViewData["Title"] = "Rapor Detay"; }

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>
                @if (Model.ReportType == SmartController.Shared.Enums.ReportType.X)
                {
                    <span class="badge bg-info">X Raporu</span>
                }
                else
                {
                    <span class="badge bg-danger">Z Raporu</span>
                }
                #@Model.Id
            </h2>
            <p class="text-muted mb-0">@Model.Sube?.Ad - @Model.ReportDate.ToString("dd.MM.yyyy HH:mm:ss")</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">Geri</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <small class="text-muted">Oluşturan</small>
                    <p class="mb-0">@Model.CreatedBy?.Ad @Model.CreatedBy?.Soyad</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <small class="text-muted">Kaynak</small>
                    <p class="mb-0">@(Model.IsAutomatic ? "Otomatik" : "Manuel")</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <small class="text-muted">Toplam Cihaz</small>
                    <p class="mb-0">@Model.Details.Select(d => d.DeviceId).Distinct().Count()</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">Sayaç Değerleri</div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Cihaz</th>
                        <th>Ödeme Kanalı</th>
                        <th>Değer</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detail in Model.Details.OrderBy(d => d.DeviceId).ThenBy(d => d.CounterType))
                    {
                        <tr>
                            <td>@detail.Device?.DeviceName (@detail.DeviceId)</td>
                            <td>
                                @switch (detail.CounterType)
                                {
                                    case SmartController.Shared.Enums.CounterType.Dijital:
                                        <span class="badge bg-primary">Dijital</span>
                                        break;
                                    case SmartController.Shared.Enums.CounterType.Jeton:
                                        <span class="badge bg-secondary">Jeton</span>
                                        break;
                                    case SmartController.Shared.Enums.CounterType.Kart:
                                        <span class="badge bg-info">Kart</span>
                                        break;
                                    case SmartController.Shared.Enums.CounterType.Nakit:
                                        <span class="badge bg-success">Nakit</span>
                                        break;
                                    case SmartController.Shared.Enums.CounterType.QRKod:
                                        <span class="badge bg-warning text-dark">QR Kod</span>
                                        break;
                                }
                            </td>
                            <td><strong>@detail.CountValue</strong></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
